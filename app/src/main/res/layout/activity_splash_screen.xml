<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".features.activities.SplashScreen">
    <ImageView
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:id="@+id/logo_one"
        android:layout_alignParentBottom="true"
        android:layout_height="150dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/logo_two"
        android:layout_alignParentEnd="true"
        android:layout_height="100dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:layout_width="120dp"
        android:scaleType="centerCrop"
        android:id="@+id/logo_three"
       android:layout_alignParentStart="true"
        android:layout_height="120dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/appNameLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/logo_four"
        android:layout_height="150dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/appNameLogo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/logo_five"
        android:layout_height="150dp"
        tools:ignore="ContentDescription" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:textSize="30sp"
    android:id="@+id/appNameLogo"
    android:gravity="center"
    android:textColor="@android:color/black"
    android:fontFamily="serif"
    android:text="@string/app_name"/>
</RelativeLayout>